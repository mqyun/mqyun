@import '../main/pubComm.styl'

navLineSize = 10px

body,
ol,
ul,
h1,
h2,
h3,
h4,
h5,
h6,
p,
th,
td,
dl,
dd,
form,
fieldset,
legend,
input,
textarea,
select
  margin 0
  padding 0

body
  font 12px"Microsoft YaHei", "Arial Narrow", HELVETICA
  background #fff
  -webkit-text-size-adjust 100%

a
  color #2d374b
  text-decoration none

ahover
  color #cd0200
  text-decoration underline

em
  font-style normal

li
  list-style none

img
  border 0
  vertical-align middle

table
  border-collapse collapse
  border-spacing 0

p
  word-wrap break-word

*
  border none
  outline none
  box-sizing border-box

@font-face
  font-family MFNZ
  src url('/MFNZ.ttf')

.body-bg
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  background url(imgUrl'login_bg.jpg') no-repeat center
  background-size cover
  z-index -9999
  .body-bg-fixed
    width 100%
    height 100%
    background rgba(0, 0, 0, 0.76)

nav.top-nav:before
  content ""
  position absolute
  top -(navLineSize)
  left 50%
  height navLineSize
  width 2px
  background rgba(240, 245, 255, .63)
nav.top-nav:after
  content ""
  position absolute
  right -(navLineSize)
  top 50%
  height 2px
  width navLineSize
  background rgba(240, 245, 255, .63)
nav.top-nav
  position fixed
  right navLineSize
  top navLineSize
  width 360px
  height 520px
  background rgba(240, 245, 255, .63)
  border-radius 8px
  padding 30px 15px
  display flex
  flex-direction column
  align-items center
  box-shadow 0 0 12px rgb(0, 142, 255)
  img.header-img
    width 130px
    height 130px
    border 1px solid rgb(240, 245, 255)
    border-radius 50%
    box-shadow 0 0 12px rgb(240, 245, 255)
  section.user-info
    margin-top 25px
    padding 6px
    width 100%
    border 1px solid rgba(240, 245, 255, 0.43)
    border-radius 6px
    .info-item
      float left
      width 50%
      padding 4px
      color #666
      font-size 16px
      span.tip
        font-weight bold